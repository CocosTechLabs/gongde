{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "ES2020",
      "module": "ES2022",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "declaration": true
    },
    "include": [
      "src/**/*.ts"
    ]
  }